{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types", "./types"],
      "types": ["node", "express", "express-session"]
    },
    "include": [
      "**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }